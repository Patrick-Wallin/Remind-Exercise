<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <ImageView
        android:id="@+id/venue_image_view"
        android:padding="0dp"
        android:layout_centerVertical="false"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/venue_information_linear_layout"
        android:paddingLeft="56dp"
        android:paddingStart="56dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/venue_name_text_view"
            style="@style/VenueNameStyle" />

        <TextView
            android:id="@+id/venue_categories_text_view"
            style="@style/VenueCategoryStyle" />

        <TextView
            android:id="@+id/venue_location_text_view"
            style="@style/VenueAddressStyle" />

    </LinearLayout>

    <ImageView
        android:id="@+id/venue_bookmark_image_view"
        android:paddingLeft="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:src="@drawable/ic_bookmark_border_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
